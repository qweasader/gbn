  if(!isnull(res = isdpkgvuln(pkg:"libcamel-1.2-29", ver:"3.2.3-0ubuntu7.1", rls:"UBUNTU12.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

