    report += res;
  }

  if(!isnull(res = isslkpkgvuln(pkg:"openssh", ver:"7.3p1-x86_64-1_slack13.0", rls:"SLK13.0"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

