  if(!isnull(res = isdpkgvuln(pkg:"policykit-1", ver:"0.105-20ubuntu0.18.04.6", rls:"UBUNTU18.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

