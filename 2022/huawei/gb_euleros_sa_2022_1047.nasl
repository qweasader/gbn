  }

  if(!isnull(res = isrpmvuln(pkg:"ncurses-compat-libs", rpm:"ncurses-compat-libs~6.1~8.20180923.h2.eulerosv2r8", rls:"EULEROSVIRTARM64-3.0.6.0"))) {
