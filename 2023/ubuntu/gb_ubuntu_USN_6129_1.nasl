  if(!isnull(res = isdpkgvuln(pkg:"avahi-daemon", ver:"0.7-4ubuntu7.2", rls:"UBUNTU20.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

