  if(!isnull(res = isdpkgvuln(pkg:"slapd", ver:"2.4.31-1+nmu2ubuntu8.5+esm6", rls:"UBUNTU14.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

