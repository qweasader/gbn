  if(!isnull(res = isrpmvuln(pkg:"systemd", rpm:"systemd~243~31.h72.eulerosv2r10", rls:"EULEROS-2.0SP10"))) {
    report += res;
  }

  if(!isnull(res = isrpmvuln(pkg:"systemd-container", rpm:"systemd-container~243~31.h72.eulerosv2r10", rls:"EULEROS-2.0SP10"))) {
