  script_tag(name:"severity_origin", value:"NVD");
  script_tag(name:"severity_date", value:"2021-09-09 11:44:00 +0000 (Thu, 09 Sep 2021)");

  script_name("Huawei EulerOS: Security Advisory for git (EulerOS-SA-2023-1078)");
