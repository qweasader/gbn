{
  script_oid("1.3.6.1.4.1.25623.1.1.2.2020.1688");
  script_cve_id("CVE-2020-7039", "CVE-2020-8608");
  script_tag(name:"creation_date", value:"2020-06-26 07:26:37 +0000 (Fri, 26 Jun 2020)");
  script_version("2023-06-20T05:05:21+0000");
