  script_tag(name:"vuldetect", value:"Checks if a vulnerable package version is present on the target host.");

  script_tag(name:"insight", value:"Type confusion in xsltNumberFormatGetMultipleLevel prior to libxslt 1.1.33 could allow attackers to potentially exploit heap corruption via crafted XML data.(CVE-2019-5815)");

  script_tag(name:"affected", value:"'libxslt' package(s) on Huawei EulerOS V2.0SP8.");

