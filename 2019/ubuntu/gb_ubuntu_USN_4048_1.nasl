  if(!isnull(res = isdpkgvuln(pkg:"docker.io", ver:"18.09.7-0ubuntu1~16.04.4", rls:"UBUNTU16.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

