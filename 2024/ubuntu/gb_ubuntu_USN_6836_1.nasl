  if(!isnull(res = isdpkgvuln(pkg:"sssd", ver:"2.2.3-3ubuntu0.13", rls:"UBUNTU20.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

