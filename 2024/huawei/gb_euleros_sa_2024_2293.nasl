  script_tag(name:"severity_origin", value:"NVD");
  script_tag(name:"severity_date", value:"2023-08-08 16:16:06 +0000 (Tue, 08 Aug 2023)");

  script_name("Huawei EulerOS: Security Advisory for qemu-kvm (EulerOS-SA-2024-2293)");
