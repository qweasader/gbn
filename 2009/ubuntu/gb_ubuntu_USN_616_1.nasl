  if(!isnull(res = isdpkgvuln(pkg:"xserver-xorg-core", ver:"1:1.0.2-0ubuntu10.13", rls:"UBUNTU6.06 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

