  txt += 'Package openssl version ' + bver + ' is installed which is known to be vulnerable.\n';
  vuln = TRUE;
}
if(!isnull(bver) && revcomp(a:bver, b:"0.9.8")>=0 && revcomp(a:bver, b:"1.0.0")<0) {
  txt += 'Package openssl version ' + bver + ' is installed which is known to be vulnerable.\n';
  vuln = TRUE;
