  if(!isnull(res = isdpkgvuln(pkg:"samba", ver:"3.0.22-1ubuntu3.11", rls:"UBUNTU6.06 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

