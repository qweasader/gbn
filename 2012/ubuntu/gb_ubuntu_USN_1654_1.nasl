  if(!isnull(res = isdpkgvuln(pkg:"cups", ver:"1.4.3-1ubuntu1.9", rls:"UBUNTU10.04 LTS"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
}

